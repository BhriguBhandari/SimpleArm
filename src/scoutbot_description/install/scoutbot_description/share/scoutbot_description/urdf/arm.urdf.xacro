<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="simple_arm">

  <!--Material-->
  <xacro:property name="mesh_scale" value="0.01 0.01 0.01"/> 

  <material name="grey"> 
    <color rgba="0.7 0.7 0.7 1.0"/> 
  </material> 

  <!--Base Link-->

  <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so"/>
  </gazebo>

  <link name="Base"> 
    <visual> 
      <origin xyz="0 0 0" rpy="${1.5708} 0 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Base.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 
  </link> 

  <link name="Base_Cover"> 
    <visual> 
      <origin xyz="0 0 0" rpy="${1.5708} 0 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Base_Cover.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry> 
        <box size="0.3 0.3 0.05"/> 
      </geometry> 
    </collision> 

    <interial> 
      <mass value="2.0"/> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <intertia ixx="0.01" ixy="0.00" ixz="0.00" 
      iyy="0.01" iyz="0.00" 
      izz="0.01"/> 
    </interial>
  </link> 

  <joint name="base" type="fixed"> 
    <parent link="Base"/> 
    <child link="Base_Cover"/> 
    <origin xyz="0 0 0.55" rpy="0 0 0"/> 
  </joint> 

<!--Joint_1-->
  <link name="Joint_1"> 
    <visual> 
      <origin xyz="0 0 0" rpy="${-1.5708} 0 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Joint_1.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry> 
        <box size="0.3 0.3 0.05"/> 
      </geometry> 
    </collision> 

    <interial> 
      <mass value="2.0"/> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <intertia ixx="0.01" ixy="0.00" ixz="0.00" 
      iyy="0.01" iyz="0.00" 
      izz="0.01"/> 
    </interial>
  </link> 

  <joint name="joint1" type="fixed"> 
    <parent link="Base_Cover"/> 
    <child link="Joint_1"/> 
    <origin xyz="0 0 0.345" rpy="0 0 0"/> 
  </joint> 

<!--Joint_2-->
  <link name="Joint_2"> 
    <visual> 
      <origin xyz="0 0 0" rpy="${1.5708} 0 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Link_1-Joint_2.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.2"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link> 

  <transmission name="joint2_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint2">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint2_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <ros2_control name="SimpleArmHardware" type="system">
    <hardware> 
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint2" type="revolute">
      <parent link="Joint_1"/> 
      <child link="Joint_2"/> 
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <axis xyz="0 0 1"/> 
      <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
    </joint> 
  </ros2_control>

<!--Joint_3-->
  <link name="Joint_3"> 
    <visual> 
      <origin xyz="-0.5 0 0" rpy="0 1.5708 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Link_2-Joint_3.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.19"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link> 

  <transmission name="joint3_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint3">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint3_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <ros2_control name="SimpleArmHardware" type="system">
    <hardware> 
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint3" type="revolute"> 
      <parent link="Joint_2"/> 
      <child link="Joint_3"/> 
      <origin xyz="0.2 -0.1 1.25" rpy="0 0 0.785"/>
      <axis xyz="0 1 0"/>
      <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
    </joint>
  </ros2_control> 

<!--Joint_4-->
  <link name="Joint_4"> 
    <visual> 
      <origin xyz="-0.70 -0.20 0.1" rpy="0 1.7508 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Link_3-Joint_4.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.09" length="0.19"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link> 

  <transmission name="joint4_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint4">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint4_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <ros2_control name="SimpleArmHardware" type="system">
    <hardware> 
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint4" type="revolute"> 
      <parent link="Joint_3"/> 
      <child link="Joint_4"/> 
      <origin xyz="-1.25 0 0" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
    </joint>
  </ros2_control> 

<!--Joint_5-->
  <link name="Joint_5"> 
    <visual> 
      <origin xyz="-0.4 0 0" rpy="0.2 0 1.5708"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Link_4-Joint_5.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.077" length="0.02"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link> 

  <transmission name="joint5_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint5">
      <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="joint5_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <ros2_control name="SimpleArmHardware" type="system">
    <hardware> 
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="joint5" type="revolute"> 
      <parent link="Joint_4"/> 
      <child link="Joint_5"/> 
      <origin xyz="-1.25 -0.1 0.2" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
    </joint>
  </ros2_control> 

<!--Joint_6-->
  <link name="Joint_6"> 
    <visual> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry> 
        <mesh filename="package://scoutbot_description/meshes/Link_5-Joint_6.stl" scale="${mesh_scale}"/> 
      </geometry> 
      <material name="grey"/> 
    </visual> 

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.077"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link> 

  <joint name="joint6" type="fixed"> 
    <parent link="Joint_5"/> 
    <child link="Joint_6"/> 
    <origin xyz="-0.5 0 0" rpy="-0.2 0 -1.5708"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="5.0" velocity="1.0"/>
  </joint>

</robot> 